{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "debug",
            "command": "D:\\APP\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "-I",
                "${workspaceFolder}\\external",
                "-I",
                "${workspaceFolder}\\source",
                "-o",
                "${workspaceFolder}\\bin\\app_debug.exe",

                "${workspaceFolder}\\external\\imgui\\*.cpp",
                "${workspaceFolder}\\source\\*.cpp",

                "-ld3d11",
                "-ld3dcompiler",
                "-lDwmapi",
                "-lgdi32",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试任务"
        },
        {
            "type": "cppbuild",
            "label": "release",
            "command": "D:\\APP\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-O2",
                "-I",
                "${workspaceFolder}\\external",
                "-I",
                "${workspaceFolder}\\source",
                "-o",
                "${workspaceFolder}\\bin\\app_release.exe",

                "${workspaceFolder}\\external\\imgui\\*.cpp",
                "${workspaceFolder}\\source\\*.cpp",

                "-ld3d11",
                "-ld3dcompiler",
                "-lDwmapi",
                "-lgdi32",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "发布任务"
        },
    ],
    "version": "2.0.0"
}