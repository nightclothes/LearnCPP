{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "debug",
            "command": "D:\\APP\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-g",

                "-I",
                "${workspaceFolder}\\external",
                "-I",
                "${workspaceFolder}\\source",

                "${workspaceFolder}\\external\\imgui\\*.cpp",
                "${workspaceFolder}\\source\\*.cpp",

                "-l",
                "d3d11",
                "-l",
                "d3dcompiler",
                "-l",
                "Dwmapi",
                "-l",
                "gdi32",

                "-o",
                "${workspaceFolder}\\bin\\app_debug.exe",

            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "调试任务"
        },
        {
            "type": "cppbuild",
            "label": "release",
            "command": "D:\\APP\\mingw64\\bin\\g++.exe",
            "args": [
                "-fdiagnostics-color=always",
                "-O2",

                "-I",
                "${workspaceFolder}\\external",
                "-I",
                "${workspaceFolder}\\source",

                "${workspaceFolder}\\external\\imgui\\*.cpp",
                "${workspaceFolder}\\source\\*.cpp",

                "-l",
                "d3d11",
                "-l",
                "d3dcompiler",
                "-l",
                "Dwmapi",
                "-l",
                "gdi32",
                
                "-o",
                "${workspaceFolder}\\bin\\app_release.exe",
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "发布任务"
        },
    ],
    "version": "2.0.0"
}